.container
  .row
    .col-md-6
      .well
        %h2 Sign up
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
          = devise_error_messages!
          .form-group
            = f.label :first_name, class: 'control-lable '
            = f.text_field :first_name, :autofocus => true, class: 'form-control'
          .form-group
            = f.label :last_name, class: 'control-lable'
            = f.text_field :last_name, class: 'form-control'
          .form-group
            = f.label :email, class: 'control-lable'
            = f.email_field :email, class: 'form-control'
          .form-group
            = f.label :password, class: 'control-lable'
            = f.password_field :password, class: 'form-control'
          .form-group
            = f.label :password_confirmation, class: 'control-lable'
            = f.password_field :password_confirmation, class: 'form-control'
          .form-group
            = f.submit "Sign up"
        .form-group
          = render "devise/shared/links"
    .col-md-6.hidden-xs.hidden-s
      = image_tag('kid-chef.jpg')